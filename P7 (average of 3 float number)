#include<stdio.h>
float average(float a,float b,float c);
float average(float a,float b,float c){
    return (a+b+c)/3.0;
}
int main(){
    float a,b,c;
    printf(" Enter first number: ");
    scanf("%f",&a);
    printf(" Enter second number: ");
    scanf("%f",&b);
    printf(" Enter third number: ");
    scanf("%f",&c);
    printf("The average of three number is %f ",average(a,b,c));
    return 0;
}
or

#include <stdio.h>
// Function prototype
void average(float a, float b, float c);
// Function definition
void average(float a, float b, float c) {
    float avg = (a + b + c) / 3.0;
    printf("The average of three numbers is %f\n", avg);
}
int main() {
    float a, b, c;
    printf("Enter first number: ");
    scanf("%f", &a);
    printf("Enter second number: ");
    scanf("%f", &b);
    printf("Enter third number: ");
    scanf("%f", &c);
    average(a, b, c);
    return 0;
}

