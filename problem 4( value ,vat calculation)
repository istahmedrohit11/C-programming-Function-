#include<stdio.h>
void calculation(float value,float vat);
void calculation(float value,float vat){
    value=value+ (vat/100)*value;
    printf("The final value is : %.2f",value);
}
int main(){
    float value,vat;
    printf("Enter value: ");
    scanf("%f",&value);
     printf("Enter vat: ");
    scanf("%f",&vat);
    calculation(value,vat);
    return 0;
}
