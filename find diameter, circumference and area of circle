//C program to find diameter, circumference and area of circle using function
#include<stdio.h>
double diameter(double n);
double diameter(double n){
    return 2*n;
}
double circumference(double n);
double circumference(double n){
    return 2 * 3.1416 * n;
}
double area(double n);
double area(double n){
    return 3.1416 * n * n;
}
int main(){
        int n;
        printf("Enter any number: ");
        scanf("%d",&n);
    printf("Diameter : %.2lf\n",diameter(n));
    printf("Circumference : %.2lf\n",circumference(n));
     printf("Area : %.2lf\n",area(n));
    return 0;
}
